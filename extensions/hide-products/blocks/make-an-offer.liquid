{% schema %}
  {
    "name": "Make an Offer",
    "target": "section",
    "templates": ["product"],
    "settings": [
      { "type": "color", "id": "background_colour", "label": "Background color", "default": "#000" },
      {
        "type": "color",
        "id": "stChatSubmitBtnBgColor",
        "label": "Submit Button background Color",
        "default": "#000"
      },
      {
        "type": "text",
        "id": "make_an_offer_btn_text",
        "label": "Make An Offer Button Title",
        "default": "Make an Offer"
      },
      {
        "type": "text",
        "id": "offers_popup_title",
        "label": "Popup Title",
        "default": "Make an Offer"
      },
      {
        "type": "text",
        "id": "offers_notice_text",
        "label": "Offers Notice Text",
        "default": "By submitting an offer, you confirm you're ready to purchase the item if accepted."
      },
      {
        "type": "text",
        "id": "offer_submit_text",
        "label": "Submit Offer Button Text",
        "default": "Submit"
      },
      {
          "type": "number",
          "id": "stChatTxtBoxRows",
          "label": "Text Box Rows",
          "default": 8
      },
      {
            "type": "checkbox",
            "id": "restrict_offer_quantity",
            "label": "Restrict offer quantity to be equal to inventory?",
            "default": false
      },
      {
            "type": "checkbox",
            "id": "hide_make_an_offer_button",
            "label": "Hide make an offer button when inventory sold out?",
            "default": false
      },
      {
         "type": "checkbox",
          "id": "restrict_offer_by_customer",
          "label": "Restrict multiple offers by the same customer?",
          "default": false
      }
    ]
  }

{% endschema %}
<link rel="stylesheet" href="{{ 'make-an-offer.css' | asset_url }}" />
<link rel="stylesheet" href="https://unpkg.com/primeflex@latest/primeflex.css">
<script src="{{ 'resources.js' | asset_url }}"></script>
<script src="{{ 'make-an-offer.js' | asset_url }}"></script>

{% render "make-an-offer" %}

